<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<% messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<div class="classification-entry">
<h2>Classification Name</h2>
<form method="post" action="/inv/classification-entry" id="classificationForm">
    <label>Name must be alphabetical characters only.
        <input type="text" 
        name="classification_name" 
        id="classificationName" 
        required 
        value="<%= locals.classification_name %>"  
        pattern="^[A-Za-z]+$"
        autocomplete="email" 
        title="Enter your email address" />
    </label>   
    <input type="submit" value="Add Classification" />
</div>
